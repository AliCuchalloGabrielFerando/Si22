<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_palido"
    tools:context=".Login">

    <TextView
        android:id="@+id/sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:onClick="recuperar"
        android:text="@string/iniciar_sesion"
        android:textColor="@color/color_primary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/correo_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sesion"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Correo"
        android:textColor="@color/color_primary"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correo_texto"
        android:layout_marginHorizontal="50dp"
        android:layout_marginLeft="50dp"
        android:drawableStart="@drawable/icon_email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/contrase単a_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correo"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/contrase_a"
        android:textColor="@color/color_primary"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/contrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contrase単a_texto"
        android:layout_marginHorizontal="50dp"
        app:cornerRadius="50dp"
        android:drawableStart="@drawable/icon_contra"

        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/olvidar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contrase単a"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="@string/olvidaste_tu_contrase_a"
        android:textColor="@color/color_primary"

        />

    <Button
        android:id="@+id/entrar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/olvidar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/color_primary"
        android:gravity="center"
        android:onClick="iniciar"
        app:cornerRadius="30dp"
        android:text="Entrar"

        />

    <TextView
        android:id="@+id/crear_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entrar"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="crearCuenta"
        android:text="Crear Cuenta"
        android:textColor="@color/color_primary" />


</RelativeLayout>